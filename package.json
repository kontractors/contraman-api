{
  "name": "contraman",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "build": "npm run lint && tsc --build tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "start": "cross-env NODE_ENV=production node ./dist",
    "test": "cross-env NODE_ENV=test jest --forceExit",
    "dev": "cross-env NODE_ENV=development nodemon --exec \"tsx ./src\" --watch ./src --ext .ts",
    "introspect": "cross-env DATABASE_URL=postgres://admin:password@localhost:5432/contraman kysely-codegen --out-file ./types/db.d.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "argon2": "^0.43.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.3",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/types": "^30.0.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.14",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "kysely-codegen": "^0.18.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "private": true
}
