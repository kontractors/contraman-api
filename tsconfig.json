{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "useUnknownInCatchVariables": false,
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "eslint.config.mjs"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register",
    ],
  },
  "exclude": [
    "src/public/*"
  ]
}