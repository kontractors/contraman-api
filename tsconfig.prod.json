{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "config.ts"
  ],
  "exclude": [
    "tests",
    "src/public/",
    "scripts",
    "eslint.config.ts",
    "vitest.config.js"
  ]
}